	<div class="item">
		<div class="date"><%= @entry.created_at.strftime("%b") %></div>
      	<h2><a href="<%= @entry.link %>"><%= @entry.title %></a></h2>
		<div class="body"><%= @entry.body %></div>
	    <ul class="info">
	      <% unless @entry.category.nil? %>
	      <li class="category"><a href="<%= @entry.category.link %>"><%= @entry.category.title %></a></li>
	      <% end %>
	      <% unless @entry.tags.size.zero? %>
	      <li class="tags"><%= @entry.tags_to_html %></li>
	      <% end %>
	      <li class="author"><%= @entry.user.name %></li>
	    </ul>
		<div class="footer">
			<% if logged_in? %>
			<p><a href="<%= @entry.edit_link %>"><%= t('edit') %></a></p>
			<% end %>
		</div>
	</div>
